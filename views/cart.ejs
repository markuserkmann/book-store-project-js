<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<%- include('navbar'); -%>
<body class="bg-gray-100">

    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center">Your Cart</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mt-6">
            <% cartItems.forEach(item => { %>
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="<%= item.image_url %>" alt="<%= item.title %>" class="w-full h-48 object-cover rounded-md">
                    <h3 class="mt-4 text-xl font-semibold text-gray-800"><%= item.title %></h3>
                    <p class="text-gray-600"><%= item.description %></p>
                    <p class="mt-2 text-lg font-bold text-gray-900"><%= item.price %> â‚¬</p>
                    <p class="mt-2 text-sm text-gray-500">Quantity: <%= item.quantity %></p>

                    <form action="/remove-from-cart" method="POST" class="mt-4">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded">Remove</button>
                    </form>
                </div>
            <% }); %>
        </div>

        <div class="mt-6">
            <a href="/shop" class="bg-sky-800 text-white px-6 py-3 rounded">Continue Shopping</a>
        </div>
    </div>

</body>
</html>
